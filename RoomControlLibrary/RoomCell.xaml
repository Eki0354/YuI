<UserControl x:Class="RoomCell.RoomCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RoomCell"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="125" Background="White" MinHeight="55" MinWidth="125">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Red" BorderThickness="1,1,1,1" Grid.RowSpan="2"/>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="20" TextWrapping="Wrap" Text="BK" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBlock Grid.Row="1" x:Name="textBlock" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Text="Alan Turing" VerticalAlignment="Center" TextAlignment="Center" FontSize="16" />
    </Grid>
</UserControl>
